@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}


<div class="p-4">
    <h1 style="color:#FFA500; font-weight:bold; font-size:2.5rem; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Manage your account</h1>

    <h2 style="color:#FFA500; font-weight:bold; font-size:2.5rem; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
