@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div style="display:flex; justify-content:center; padding:4px; height:70vh;">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 style="color:#FFA500; font-weight:bold">Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="height:30px;" />
            <label asp-for="Input.Email" class="input-label">Email</label>
            <span asp-validation-for="Input.Email" style="font-size:0.8rem" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="First Name" style="height:30px;" />
            <label asp-for="Input.FirstName" class="input-label">First Name</label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="Last Name" style="height:30px;" />
            <label asp-for="Input.LastName" class="input-label">Last Name</label>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" placeholder="Address" style="height:30px;" />
            <label asp-for="Input.Address" class="input-label">Address</label>
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" style="height:30px;" />
            <label asp-for="Input.Password" class="input-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" style="height:30px;" />
            <label asp-for="Input.ConfirmPassword" class="input-label">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #FFA500; border-color: #FFA500;">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-floating .form-control {
        height: 30px !important;
        padding: 5px 12px !important;
    }

    .form-floating .input-label {
        font-size: 0.8rem;
        padding-top: 0.5rem; 
        padding-left: 12px; 
        height: 30px;
        line-height: 1.2;
    }
</style>
