@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 style="color:#FFA500; font-weight:bold; font-size:2.5rem; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p style="color:#FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p style="color:#FFA500; font-weight:bold;  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="w-100 btn btn-lg btn-success" style="background-color: #FFA500; border-color: #FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); margin-bottom:8px" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-lg btn-success" style="background-color: #FFA500; border-color: #FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
