﻿   
@model CarRental.Domain.DTO.AddToWishlistDTO

<div class="container" style="font-weight:bold; color:#FFA500">
    <form method="post" asp-action="AddCarToWishlist">

        <input type="hidden" asp-for="SelectedCarId" value="@Model.SelectedCarId" class="form-control" />

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="SelectedCarModel" class="control-label"></label>
                <input asp-for="SelectedCarModel" class="form-control" />
                <span asp-validation-for="SelectedCarModel" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="Days" class="control-label"></label>
                <input asp-for="Days" type="number" class="form-control" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <button type="submit" class="btn btn-success" style="background-color: #FFA500; border-color: #FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Add To Wishlist</button>
        </div>
    </form>

</div>