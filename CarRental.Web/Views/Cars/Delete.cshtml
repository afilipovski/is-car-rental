  @model CarRental.Domain.Domain.Car

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="fullscreen-cars2 p-4 ">
    <h1 style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Delete</h1>

    <h3 style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Are you sure you want to delete this?</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2" style="color:white">
                @Html.DisplayNameFor(model => model.CarModel)
            </dt>
            <dd class="col-sm-10" style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
                @Html.DisplayFor(model => model.CarModel)
            </dd>
            <dt class="col-sm-2" style="color:white">
                @Html.DisplayNameFor(model => model.CarManufacturer)
            </dt>
            <dd class="col-sm-10" style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
                @Html.DisplayFor(model => model.CarManufacturer)
            </dd>
            <dt class="col-sm-2" style="color:white">
                @Html.DisplayNameFor(model => model.CarImage)
            </dt>
            <dd class="col-sm-10">
                <div style="width: 16rem;">
                    <img style="width: 16rem;" src="@Model.CarImage" / alt="image">
                </div>
            </dd>
            <dt class="col-sm-2" style="color:white">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10" style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2" style="color:white">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10" style="font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
                @Html.DisplayFor(model => model.Rating)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #FFA500; border-color: #FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);" /> |
            <a asp-action="Index" class="btn btn-success" style="background-color: #FFA500; border-color: #FFA500; font-weight:bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">
                Back to List
            </a>
        </form>
    </div>
</div>